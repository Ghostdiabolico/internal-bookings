<%- include('partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css">
  <style>
    .table td, .table th { white-space: nowrap; }
    .feedback-input { min-width: 150px; }
    .table-container { max-height: 400px; overflow-y: auto; margin-bottom: 30px; }
  </style>
</head>
<body>

<% if (!session.admin) { %>
  <div class="container mt-4">
    <h1>Admin Login</h1>
    <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
    <form method="POST" action="/admin/login">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" id="username" name="username" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
<% } else { %>

<div class="container-fluid mt-2">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Admin Panel</h1>
    <a href="/admin/logout" class="btn btn-outline-danger">Logout</a>
  </div>

  <% 
    function formatTime(t) {
      if (!t) return "";
      let [h,m] = t.split(":");
      return `${h.padStart(2,"0")}:${m.padStart(2,"0")}`;
    }
    function formatDate(dt) {
      if (!dt) return "";
      let d = new Date(dt);
      return d.toISOString().split("T")[0];
    }
  %>

  <!-- PENDING -->
  <h3>Pending Bookings (<%= pending.length %>)</h3>
  <div class="table-container">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th><th>Requester</th><th>Email</th><th>Type</th><th>Date</th><th>Time</th>
          <th>Participants</th><th>Supervisors</th><th>Equipment</th><th>Notes</th>
          <th>Submitted At</th><th>Risk File</th><th>Feedback</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% pending.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.requester %></td>
          <td><%= b.email %></td>
          <td><%= b.type_of_use === "Other" && b.type_of_use_other ? b.type_of_use_other : b.type_of_use %></td>
          <td><%= formatDate(b.date) %></td>
          <td><%= formatTime(b.start_time) %> - <%= formatTime(b.finish_time) %></td>
          <td><%= b.participants || "-" %></td>
          <td><%= b.supervisors || "-" %></td>
          <td>
            <% if (b.equipment && b.equipment.length>0) { %>
              <ul class="mb-0"><% b.equipment.forEach(eq => { %><li><%= eq %></li><% }) %></ul>
            <% } else { %>-<% } %>
          </td>
          <td><%= b.notes || "-" %></td>
          <td><%= formatDate(b.created_at) %></td>
          <td>
            <% if (b.risk_file) { %>
              <a href="/download/<%= b.risk_file %>">Download</a>
            <% } else { %>-<% } %>
          </td>
          <td>
            <form method="POST" action="/admin/<%= b.id %>/feedback" class="d-flex">
              <input type="text" name="feedback" value="<%= b.feedback %>" class="form-control form-control-sm me-1 feedback-input">
              <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </form>
          </td>
          <td>
            <form method="POST" action="/admin/<%= b.id %>/approved" class="d-inline">
              <button type="submit" class="btn btn-success btn-sm mb-1">Approve</button>
            </form>
            <form method="POST" action="/admin/<%= b.id %>/rejected" class="d-inline">
              <button type="submit" class="btn btn-warning btn-sm mb-1">Reject</button>
            </form>
            <form method="POST" action="/admin/<%= b.id %>/delete" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- APPROVED -->
  <h3>Approved Bookings (<%= approved.length %>)</h3>
  <div class="table-container">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th><th>Requester</th><th>Email</th><th>Type</th><th>Date</th><th>Time</th>
          <th>Participants</th><th>Supervisors</th><th>Equipment</th><th>Notes</th>
          <th>Submitted At</th><th>Risk File</th><th>Feedback</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% approved.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.requester %></td>
          <td><%= b.email %></td>
          <td><%= b.type_of_use === "Other" && b.type_of_use_other ? b.type_of_use_other : b.type_of_use %></td>
          <td><%= formatDate(b.date) %></td>
          <td><%= formatTime(b.start_time) %> - <%= formatTime(b.finish_time) %></td>
          <td><%= b.participants || "-" %></td>
          <td><%= b.supervisors || "-" %></td>
          <td>
            <% if (b.equipment && b.equipment.length>0) { %>
              <ul class="mb-0"><% b.equipment.forEach(eq => { %><li><%= eq %></li><% }) %></ul>
            <% } else { %>-<% } %>
          </td>
          <td><%= b.notes || "-" %></td>
          <td><%= formatDate(b.created_at) %></td>
          <td>
            <% if (b.risk_file) { %>
              <a href="/download/<%= b.risk_file %>">Download</a>
            <% } else { %>-<% } %>
          </td>
          <td><%= b.feedback || "-" %></td>
          <td>
            <form method="POST" action="/admin/<%= b.id %>/rejected" class="d-inline">
              <button type="submit" class="btn btn-warning btn-sm mb-1">Reject</button>
            </form>
            <form method="POST" action="/admin/<%= b.id %>/delete" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- REJECTED -->
  <h3>Rejected Bookings (<%= rejected.length %>)</h3>
  <div class="table-container">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th><th>Requester</th><th>Email</th><th>Type</th><th>Date</th><th>Time</th>
          <th>Participants</th><th>Supervisors</th><th>Equipment</th><th>Notes</th>
          <th>Submitted At</th><th>Risk File</th><th>Feedback</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% rejected.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.requester %></td>
          <td><%= b.email %></td>
          <td><%= b.type_of_use === "Other" && b.type_of_use_other ? b.type_of_use_other : b.type_of_use %></td>
          <td><%= formatDate(b.date) %></td>
          <td><%= formatTime(b.start_time) %> - <%= formatTime(b.finish_time) %></td>
          <td><%= b.participants || "-" %></td>
          <td><%= b.supervisors || "-" %></td>
          <td>
            <% if (b.equipment && b.equipment.length>0) { %>
              <ul class="mb-0"><% b.equipment.forEach(eq => { %><li><%= eq %></li><% }) %></ul>
            <% } else { %>-<% } %>
          </td>
          <td><%= b.notes || "-" %></td>
          <td><%= formatDate(b.created_at) %></td>
          <td>
            <% if (b.risk_file) { %>
              <a href="/download/<%= b.risk_file %>">Download</a>
            <% } else { %>-<% } %>
          </td>
          <td><%= b.feedback || "-" %></td>
          <td>
            <form method="POST" action="/admin/<%= b.id %>/delete" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- DELETED -->
  <h3>Deleted Booking Logs (<%= deleted.length %>)</h3>
  <div class="table-container">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>Booking ID</th><th>Requester</th><th>Email</th><th>Type</th>
          <th>Deleted At</th><th>Deleted By</th><th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% deleted.forEach(b => { %>
        <tr>
          <td><%= b.booking_id %></td>
          <td><%= b.requester %></td>
          <td><%= b.email %></td>
          <td><%= b.type_of_use %></td>
          <td><%= formatDate(b.deleted_at) %></td>
          <td><%= b.deleted_by %></td>
          <td><%= b.action %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>

<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
