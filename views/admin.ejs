                    </form>
                    <button type="button" class="btn btn-danger btn-sm" 
                            onclick="confirmDelete(<%= b.id %>, '<%= b.requester.replace(/'/g, "\\'") %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
