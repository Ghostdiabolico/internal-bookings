                <td><strong>#<%= b.id %></strong></td>
                <td><%= b.requester %></td>
                <td><a href="mailto:<%= b.email %>"><%= b.email %></a></td>
                <td><%= b.responsible_name || "-" %></td>
                <td>
                  <span class="badge bg-info">
                    <%= b.type_of_use === "Other" && b.type_of_use_other ? b.type_of_use_other : b.type_of_use %>
                  </span>
                </td>
                <td><%= b.event_name || "-" %></td>
                <td><%= formatDate(b.date) %></td>
                <td>
                  <i class="bi bi-clock"></i>
                  <%= formatTime(b.start_time) %> - <%= formatTime(b.finish_time) %>
                </td>
                <td><%= b.participants || "-" %></td>
                <td><%= b.age_range || "-" %></td>
                <td>
                  <% if (b.supervisors && b.supervisors.length > 30) { %>
                    <div class="expandable-text collapsed" onclick="toggleText(this)">
