                    <button 
                      class="btn btn-sm btn-danger" 
                      onclick="deleteUser(<%= user.id %>, '<%= user.username.replace(/'/g, "\\'") %>')"
                      title="Delete User">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No users registered yet.
      </div>
    <% } %>

  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-exclamation-triangle text-warning"></i> Confirm Delete
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this booking?</p>
          <p class="mb-0"><strong>Booking ID:</strong> <span id="deleteBookingId"></span></p>
          <p><strong>Requester:</strong> <span id="deleteRequester"></span></p>
          <div class="alert alert-warning mt-3">
            <i class="bi bi-info-circle"></i> This action cannot be undone. The booking will be logged in the deletion history.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form method="POST" id="deleteForm" class="d-inline">
            <button type="submit" class="btn btn-danger">
              <i class="bi bi-trash"></i> Delete Booking
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Toggle expandable text
  function toggleText(element) {
    if (element.classList.contains('collapsed')) {
      element.classList.remove('collapsed');
      element.classList.add('expanded');
    } else {
      element.classList.remove('expanded');
      element.classList.add('collapsed');
    }
  }

  // User Management Functions
  async function resetUserPassword(userId, username) {
    if (!confirm(`Are you sure you want to reset the password for user "${username}"?\n\nA temporary password will be generated.`)) {
      return;
    }

    try {
      const response = await fetch('/admin/reset-user-password', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userId })
      });

      const result = await response.json();

      if (result.success) {
        alert(`Password reset successful!\n\nUsername: ${username}\nTemporary Password: ${result.tempPassword}\n\nPlease save this password and provide it to the user. They should change it after logging in.`);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error resetting password: ' + error.message);
    }
  }

  async function deleteUser(userId, username) {
    if (!confirm(`⚠️ WARNING: Are you sure you want to DELETE user "${username}"?\n\nThis will:\n- Remove the user account permanently\n- Delete all their bookings\n\nThis action CANNOT be undone!`)) {
      return;
    }

    // Double confirmation for safety
    const confirmation = prompt(`Type "${username}" to confirm deletion:`);
    if (confirmation !== username) {
      alert('Deletion cancelled. Username did not match.');
      return;
    }

    try {
      const response = await fetch('/admin/delete-user', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userId })
      });

      const result = await response.json();

      if (result.success) {
        alert(`User "${username}" has been deleted successfully.`);
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error deleting user: ' + error.message);
    }
  }

  // Delete confirmation modal for bookings
  function confirmDelete(bookingId, requester) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    document.getElementById('deleteBookingId').textContent = '#' + bookingId;
    document.getElementById('deleteRequester').textContent = requester;
    document.getElementById('deleteForm').action = '/admin/' + bookingId + '/delete';
    modal.show();
  }

  // Add loading state to forms
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('form');
    forms.forEach(form => {
      form.addEventListener('submit', function(e) {
        const submitBtn = this.querySelector('button[type="submit"]');
        if (submitBtn && !submitBtn.classList.contains('btn-sm')) {
          submitBtn.disabled = true;
          const originalText = submitBtn.innerHTML;
          submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Processing...';
          
          setTimeout(() => {
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
          }, 5000);
        }
      });
    });
  });

  // Auto-dismiss alerts after 5 seconds
  document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert-dismissible');
    alerts.forEach(alert => {
      setTimeout(() => {
        const bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
      }, 5000);
    });
  });
</script>

</body>
</html>