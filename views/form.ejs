<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Request Pool Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css">
  <style>
    .form-section {
      background: #f8f9fa;
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 1.5rem;
    }
    .form-section h5 {
      color: #495057;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #dee2e6;
    }
    .equipment-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 0.5rem;
    }
    .success-card {
      animation: slideDown 0.5s ease-out;
    }
    @keyframes slideDown {
      from {
        transform: translateY(-20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    .required-star {
      color: #dc3545;
    }
    .time-select {
      max-height: 200px;
      overflow-y: auto;
    }
    .file-upload-wrapper {
      position: relative;
    }
    .file-upload-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    #otherFieldsToggle {
      transition: all 0.3s ease;
    }
    #otherFields {
      transition: all 0.3s ease;
    }
    .form-check-input:checked {
      background-color: #0d6efd;
      border-color: #0d6efd;
    }
    .sticky-submit {
      position: sticky;
      bottom: 0;
      background: white;
      padding: 1rem 0;
      border-top: 2px solid #dee2e6;
      z-index: 10;
    }
  </style>
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      
      <div class="d-flex align-items-center mb-4">
        <i class="bi bi-calendar-plus fs-1 text-primary me-3"></i>
        <h1 class="mb-0">Request Pool Booking</h1>
      </div>

      <% if (submitted) { %>
        <div class="alert alert-success success-card shadow-sm">
          <div class="d-flex align-items-start">
            <i class="bi bi-check-circle-fill fs-1 text-success me-3"></i>
            <div class="flex-grow-1">
              <h4 class="alert-heading">Booking Successfully Submitted!</h4>
              <p class="mb-2">Your booking request has been received and is pending approval.</p>
              <p class="mb-0">You can view and manage all your bookings from your account.</p>
              <div class="mt-3 d-flex gap-2">
                <a href="/my-bookings" class="btn btn-primary">
                  <i class="bi bi-eye"></i> View My Bookings
                </a>
                <a href="/form" class="btn btn-outline-primary">
                  <i class="bi bi-plus-circle"></i> New Booking
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <form method="POST" action="/form" enctype="multipart/form-data" id="bookingForm">
        
        <!-- Contact Information Section -->
        <div class="form-section">
          <h5><i class="bi bi-person-fill"></i> Contact Information</h5>
          <div class="row g-3">
            <div class="col-md-6">
              <label for="requester" class="form-label">
                Requester Name <span class="required-star">*</span>
              </label>
              <input type="text" class="form-control" id="requester" name="requester" 
                     value="<%= requester || '' %>" required>
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">
                Email Address <span class="required-star">*</span>
              </label>
              <input type="email" class="form-control" id="email" name="email" 
                     value="<%= email || '' %>" required placeholder="example@email.com">
              <div class="form-text">Contact email for this booking</div>
            </div>
            <div class="col-md-6">
              <label for="responsible_name" class="form-label">Responsible Person Name</label>
              <input type="text" class="form-control" id="responsible_name" name="responsible_name"
                     placeholder="If different from requester">
            </div>
          </div>
        </div>

        <!-- Event Details Section -->
        <div class="form-section">
          <h5><i class="bi bi-info-circle"></i> Event Details</h5>
          <div class="row g-3">
            <div class="col-md-6">
              <label for="type_of_use" class="form-label">
                Type of Use <span class="required-star">*</span>
              </label>
              <select class="form-select" id="type_of_use" name="type_of_use" required>
                <option value="">-- Select Type --</option>
                <option value="Official Swimming Carnival">Official Swimming Carnival</option>
                <option value="Diving Carnival">Diving Carnival</option>
                <option value="Not Official Swimming Carnival">Not Official Swimming Carnival</option>
                <option value="Training">Training</option>
                <option value="Event">Event</option>
                <option value="Other">Other (Please specify)</option>
              </select>
              <input type="text" class="form-control mt-2 d-none" id="type_of_use_other" 
                     name="type_of_use_other" placeholder="Please specify the type of use">
            </div>
            <div class="col-md-6">
              <label for="event_name" class="form-label">Event Name</label>
              <input type="text" class="form-control" id="event_name" name="event_name"
                     placeholder="e.g., Annual Swimming Championships">
            </div>
          </div>
        </div>

        <!-- Date & Time Section -->
        <div class="form-section">
          <h5><i class="bi bi-clock"></i> Date & Time</h5>
          <div class="row g-3">
            <div class="col-md-4">
              <label for="date" class="form-label">
                Date <span class="required-star">*</span>
              </label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                <input type="text" class="form-control" id="date" name="date" required 
                       placeholder="Select date">
              </div>
            </div>
            <div class="col-md-4">
              <label for="start_time" class="form-label">
                Start Time <span class="required-star">*</span>
              </label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-clock"></i></span>
                <select class="form-select time-select" id="start_time" name="start_time" required>
                  <option value="">-- Select --</option>
                  <% for(let h=6; h<=22; h++) { %>
                    <% for(let m=0; m<60; m+=15) { %>
                      <option value="<%= `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}` %>">
                        <%= `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}` %>
                      </option>
                    <% } %>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="col-md-4">
              <label for="finish_time" class="form-label">
                Finish Time <span class="required-star">*</span>
              </label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-clock-fill"></i></span>
                <select class="form-select time-select" id="finish_time" name="finish_time" required>
                  <option value="">-- Select --</option>
                  <% for(let h=6; h<=23; h++) { %>
                    <% for(let m=0; m<60; m+=15) { %>
                      <option value="<%= `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}` %>">
                        <%= `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}` %>
                      </option>
                    <% } %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Participants Section -->
        <div class="form-section">
          <h5><i class="bi bi-people"></i> Participants & Supervision</h5>
          <div class="row g-3">
            <div class="col-md-4">
              <label for="participants" class="form-label">Number of Participants</label>
              <input type="number" class="form-control" id="participants" name="participants" 
                     min="1" placeholder="e.g., 50">
            </div>
            <div class="col-md-4">
              <label for="age_range" class="form-label">Age Range</label>
              <input type="text" class="form-control" id="age_range" name="age_range" 
                     placeholder="e.g., 8-16 years">
            </div>
            <div class="col-md-4">
              <label for="supervisors" class="form-label">Supervisors</label>
              <input type="text" class="form-control" id="supervisors" name="supervisors" 
                     placeholder="Names or number of supervisors">
              <div class="form-text">Include qualified staff present</div>
            </div>
          </div>
        </div>

        <!-- Equipment Section -->
        <div class="form-section">
          <h5><i class="bi bi-gear"></i> Equipment & Setup Requirements</h5>
          <div class="equipment-grid">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Microphone" id="eq1">
              <label class="form-check-label" for="eq1">
                <i class="bi bi-mic"></i> Microphone
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Touchpads and Electronic timing system" id="eq2">
              <label class="form-check-label" for="eq2">
                <i class="bi bi-stopwatch"></i> Touchpads & Electronic Timing
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Meet Manager" id="eq3">
              <label class="form-check-label" for="eq3">
                <i class="bi bi-laptop"></i> Meet Manager Software
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Water Polo goals" id="eq4">
              <label class="form-check-label" for="eq4">
                <i class="bi bi-bullseye"></i> Water Polo Goals
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Water Polo Scoreboard" id="eq5">
              <label class="form-check-label" for="eq5">
                <i class="bi bi-display"></i> Water Polo Scoreboard
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Diving Boards" id="eq6">
              <label class="form-check-label" for="eq6">
                <i class="bi bi-arrow-down-circle"></i> Diving Boards
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Short Course" id="eq7">
              <label class="form-check-label" for="eq7">
                <i class="bi bi-water"></i> Short Course Setup (25m)
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="equipment[]" 
                     value="Long Course" id="eq8">
              <label class="form-check-label" for="eq8">
                <i class="bi bi-water"></i> Long Course Setup (50m)
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="eqOtherCheck">
              <label class="form-check-label" for="eqOtherCheck">
                <i class="bi bi-plus-circle"></i> Other Equipment
              </label>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <input type="text" class="form-control" id="equipment_other" name="equipment_other" 
                     placeholder="Specify other equipment needed" disabled>
            </div>
          </div>
        </div>

        <!-- Additional Information Section -->
        <div class="form-section">
          <h5><i class="bi bi-chat-left-text"></i> Additional Information</h5>
          <div class="row g-3">
            <div class="col-md-12">
              <label for="other_activities" class="form-label">Other activities affected by this booking</label>
              <input type="text" class="form-control" id="other_activities" name="other_activities"
                     placeholder="e.g., Regular lap swimming will be suspended">
            </div>
            <div class="col-md-12">
              <label for="notes" class="form-label">Additional Notes</label>
              <textarea class="form-control" id="notes" name="notes" rows="3"
                        placeholder="Any special requirements or information..."></textarea>
            </div>
            <div class="col-md-12">
              <label for="risk_file" class="form-label file-upload-label">
                <i class="bi bi-file-earmark-pdf"></i> Risk Assessment Document
              </label>
              <input type="file" class="form-control" id="risk_file" name="risk_file" 
                     accept=".pdf,.doc,.docx">
              <div class="form-text">
                Upload your risk assessment (PDF/DOC format, max 10MB). Required for certain events.
              </div>
            </div>
          </div>
        </div>

        <!-- Submit Section -->
        <div class="sticky-submit">
          <div class="row g-3">
            <div class="col-md-12">
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="confirmCheck" required>
                <label class="form-check-label" for="confirmCheck">
                  I confirm that all information provided is accurate and I understand that this booking request is subject to approval
                  <span class="required-star">*</span>
                </label>
              </div>
            </div>
            <div class="col-md-12 d-flex gap-2">
              <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                <i class="bi bi-send"></i> Submit Booking Request
              </button>
              <button type="reset" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Clear Form
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
  // Initialize date picker
  flatpickr("#date", { 
    dateFormat: "Y-m-d", 
    minDate: "today",
    altInput: true,
    altFormat: "F j, Y"
  });

  // Show/hide "Other" field for type of use
  document.getElementById('type_of_use').addEventListener('change', function() {
    const otherField = document.getElementById('type_of_use_other');
    if (this.value === 'Other') {
      otherField.classList.remove('d-none');
      otherField.required = true;
    } else {
      otherField.classList.add('d-none');
      otherField.required = false;
      otherField.value = '';
    }
  });

  // Enable/disable other equipment field
  document.getElementById('eqOtherCheck').addEventListener('change', function() {
    const otherField = document.getElementById('equipment_other');
    otherField.disabled = !this.checked;
    if (!this.checked) otherField.value = '';
  });

  // Form validation enhancement
  document.getElementById('bookingForm').addEventListener('submit', function(e) {
    const startTime = document.getElementById('start_time').value;
    const finishTime = document.getElementById('finish_time').value;
    
    if (startTime && finishTime && startTime >= finishTime) {
      e.preventDefault();
      alert('Finish time must be after start time');
      return false;
    }
    
    // Show loading state
    const submitBtn = document.getElementById('submitBtn');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Submitting...';
  });

  // Auto-save form data to localStorage (except file inputs)
  const formInputs = document.querySelectorAll('#bookingForm input:not([type="file"]), #bookingForm select, #bookingForm textarea');
  
  // Load saved data
  window.addEventListener('DOMContentLoaded', function() {
    const savedData = localStorage.getItem('bookingFormData');
    if (savedData && !<%= submitted ? 'true' : 'false' %>) {
      const data = JSON.parse(savedData);
      formInputs.forEach(input => {
        if (data[input.name] !== undefined) {
          if (input.type === 'checkbox') {
            input.checked = data[input.name];
          } else {
            input.value = data[input.name];
          }
        }
      });
    }
  });

  // Save data on change
  formInputs.forEach(input => {
    input.addEventListener('change', function() {
      const formData = {};
      formInputs.forEach(field => {
        if (field.type === 'checkbox') {
          formData[field.name] = field.checked;
        } else {
          formData[field.name] = field.value;
        }
      });
      localStorage.setItem('bookingFormData', JSON.stringify(formData));
    });
  });

  // Clear saved data on successful submission
  <% if (submitted) { %>
    localStorage.removeItem('bookingFormData');
  <% } %>
</script>

</body>
</html>