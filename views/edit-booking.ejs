<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Booking - Pool Booking System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css">
  <style>
    .edit-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
    }
    .form-section {
      background: #f8f9fa;
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 1.5rem;
      border-left: 4px solid #667eea;
    }
    .form-section h5 {
      color: #667eea;
      margin-bottom: 1rem;
      font-weight: 600;
    }
    .feedback-alert {
      background: #fff3cd;
      border-left: 4px solid #ffc107;
      padding: 1rem;
      border-radius: 0.25rem;
    }
    .equipment-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    .equipment-card {
      background: white;
      padding: 0.75rem;
      border-radius: 0.5rem;
      border: 2px solid #e9ecef;
      transition: all 0.2s;
    }
    .equipment-card:has(input:checked) {
      border-color: #667eea;
      background: #f0f2ff;
    }
    .form-floating-custom {
      position: relative;
    }
    .input-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #6c757d;
      z-index: 10;
    }
    .form-control.with-icon {
      padding-left: 2.5rem;
    }
    .btn-save {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      padding: 0.75rem 2rem;
      font-weight: 600;
    }
    .btn-save:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
  </style>
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      
      <!-- Header -->
      <div class="edit-header">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h1 class="mb-2">
              <i class="bi bi-pencil-square"></i> Edit Booking
            </h1>
            <p class="mb-0 opacity-75">
              Make changes to your rejected booking and resubmit for approval
            </p>
          </div>
          <a href="/my-bookings?email=<%= booking.email %>&code=<%= booking.access_code %>" class="btn btn-light">
            <i class="bi bi-arrow-left"></i> Back to My Bookings
          </a>
        </div>
      </div>

   <!-- Rejection Feedback Alert -->
      <% if (booking.feedback) { %>
        <div class="feedback-alert mb-4">
          <h6 class="mb-2">
            <i class="bi bi-exclamation-triangle-fill text-warning"></i>
            <strong>Reason for Rejection:</strong>
          </h6>
          <p class="mb-0"><%= booking.feedback %></p>
        </div>
      <% } %>

      <!-- ADD THIS ERROR DISPLAY -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
          <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle-fill fs-1 text-danger me-3"></i>
            <div class="flex-grow-1">
              <h4 class="alert-heading">Cannot Update Booking</h4>
              <div style="white-space: pre-line;"><%= error %></div>
              <hr>
              <p class="mb-0">
                <strong>Tip:</strong> Check the 
                <a href="/calendar" class="alert-link" target="_blank">calendar</a> 
                to find available time slots, or choose a different time.
              </p>
            </div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Edit Form -->
      <form action="/edit-booking/<%= booking.id %>" method="POST" enctype="multipart/form-data">
    
        
        <!-- Hidden Access Code -->
        <input type="hidden" name="access_code" value="<%= booking.access_code %>">

        <!-- Contact Information Section -->
        <div class="form-section">
          <h5>
            <i class="bi bi-person-circle"></i> Contact Information
          </h5>
          <div class="row g-3">
            <div class="col-md-6">
              <div class="form-floating-custom">
                <i class="bi bi-person-fill input-icon"></i>
                <input type="text" class="form-control with-icon" id="requester" name="requester" 
                       value="<%= booking.requester %>" placeholder="Requester Name" required>
                <label for="requester" class="form-label">Requester Name *</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-floating-custom">
                <i class="bi bi-envelope-fill input-icon"></i>
                <input type="email" class="form-control with-icon" id="email" name="email" 
                       value="<%= booking.email %>" placeholder="Email" required>
                <label for="email" class="form-label">Email *</label>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Details Section -->
        <div class="form-section">
          <h5>
            <i class="bi bi-calendar-event"></i> Booking Details
          </h5>
          <div class="row g-3">
            <div class="col-md-4">
              <label for="date" class="form-label">
                <i class="bi bi-calendar3"></i> Date *
              </label>
              <input type="text" class="form-control" id="date" name="date" 
                     value="<%= booking.date.toISOString().slice(0,10) %>" required>
            </div>
            <div class="col-md-4">
              <label for="start_time" class="form-label">
                <i class="bi bi-clock"></i> Start Time *
              </label>
              <input type="text" class="form-control" id="start_time" name="start_time" 
                     value="<%= booking.start_time %>" required>
            </div>
            <div class="col-md-4">
              <label for="finish_time" class="form-label">
                <i class="bi bi-clock-fill"></i> Finish Time *
              </label>
              <input type="text" class="form-control" id="finish_time" name="finish_time" 
                     value="<%= booking.finish_time %>" required>
            </div>
          </div>
        </div>

        <!-- Activity Details Section -->
        <div class="form-section">
          <h5>
            <i class="bi bi-clipboard-check"></i> Activity Details
          </h5>
          <div class="row g-3">
            <div class="col-md-6">
              <label for="type_of_use" class="form-label">
                <i class="bi bi-tag-fill"></i> Type of Use *
              </label>
              <select class="form-select" id="type_of_use" name="type_of_use" required>
                <option value="">-- Select Type --</option>
                <option value="Training" <%= booking.type_of_use==='Training'?'selected':'' %>>Training</option>
                <option value="Competition" <%= booking.type_of_use==='Competition'?'selected':'' %>>Competition</option>
                <option value="Event" <%= booking.type_of_use==='Event'?'selected':'' %>>Event</option>
                <option value="Other" <%= (booking.type_of_use!=='Training' && booking.type_of_use!=='Competition' && booking.type_of_use!=='Event')?'selected':'' %>>Other</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="type_of_use_other" class="form-label">
                <i class="bi bi-pencil"></i> Specify if Other
              </label>
              <input type="text" class="form-control" id="type_of_use_other" name="type_of_use_other" 
                     placeholder="Please specify" 
                     value="<%= (booking.type_of_use!=='Training' && booking.type_of_use!=='Competition' && booking.type_of_use!=='Event')?booking.type_of_use:'' %>">
            </div>
            <div class="col-md-6">
              <label for="participants" class="form-label">
                <i class="bi bi-people-fill"></i> Number of Participants
              </label>
              <input type="number" class="form-control" id="participants" name="participants" 
                     value="<%= booking.participants %>" min="0" placeholder="0">
            </div>
            <div class="col-md-6">
              <label for="supervisors" class="form-label">
                <i class="bi bi-shield-check"></i> Number of Supervisors
              </label>
              <input type="number" class="form-control" id="supervisors" name="supervisors" 
                     value="<%= booking.supervisors %>" min="0" placeholder="0">
            </div>
          </div>
        </div>

        <!-- Equipment Section -->
        <div class="form-section">
          <h5>
            <i class="bi bi-box-seam"></i> Equipment Required
          </h5>
          <div class="equipment-grid">
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Microphone" id="eq1" 
                       <%= booking.equipment?.includes('Microphone')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq1">
                  <i class="bi bi-mic-fill text-primary"></i> Microphone
                </label>
              </div>
            </div>
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Touchpads and Electronic timing system" id="eq2" 
                       <%= booking.equipment?.includes('Touchpads and Electronic timing system')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq2">
                  <i class="bi bi-stopwatch text-primary"></i> Touchpads & Timing
                </label>
              </div>
            </div>
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Meet Manager" id="eq3" 
                       <%= booking.equipment?.includes('Meet Manager')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq3">
                  <i class="bi bi-laptop text-primary"></i> Meet Manager
                </label>
              </div>
            </div>
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Water Polo goals" id="eq4" 
                       <%= booking.equipment?.includes('Water Polo goals')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq4">
                  <i class="bi bi-trophy text-primary"></i> Water Polo Goals
                </label>
              </div>
            </div>
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Water Polo Scoreboard" id="eq5" 
                       <%= booking.equipment?.includes('Water Polo Scoreboard')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq5">
                  <i class="bi bi-clipboard-data text-primary"></i> Water Polo Scoreboard
                </label>
              </div>
            </div>
            <div class="equipment-card">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="equipment[]" 
                       value="Diving Boards" id="eq6" 
                       <%= booking.equipment?.includes('Diving Boards')?'checked':'' %>>
                <label class="form-check-label w-100" for="eq6">
                  <i class="bi bi-water text-primary"></i> Diving Boards
                </label>
              </div>
            </div>
          </div>

          <!-- Other Equipment -->
          <div class="mt-3">
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="eqOtherCheck" 
                     <%= booking.equipment_other?'checked':'' %>>
              <label class="form-check-label" for="eqOtherCheck">
                <strong>Other Equipment</strong>
              </label>
            </div>
            <input type="text" class="form-control" id="equipment_other" name="equipment_other" 
                   placeholder="Specify other equipment needed" 
                   value="<%= booking.equipment_other %>" 
                   <%= booking.equipment_other?'':'disabled' %>>
          </div>
        </div>

        <!-- Additional Information Section -->
        <div class="form-section">
          <h5>
            <i class="bi bi-file-earmark-text"></i> Additional Information
          </h5>
          
          <!-- Risk File -->
          <div class="mb-3">
            <label for="risk_file" class="form-label">
              <i class="bi bi-file-pdf"></i> Risk Assessment File (PDF)
            </label>
            <input type="file" class="form-control" id="risk_file" name="risk_file" accept=".pdf">
            <% if(booking.risk_file){ %>
              <div class="mt-2">
                <small class="text-muted">
                  <i class="bi bi-paperclip"></i> Current file: 
                  <a href="/download/<%= booking.risk_file %>" target="_blank">
                    <%= booking.risk_file %>
                  </a>
                </small>
              </div>
            <% } else { %>
              <small class="text-muted">No file currently attached</small>
            <% } %>
          </div>

          <!-- Notes -->
          <div class="mb-3">
            <label for="notes" class="form-label">
              <i class="bi bi-journal-text"></i> Additional Notes
            </label>
            <textarea class="form-control" id="notes" name="notes" rows="4" 
                      placeholder="Any additional information or special requirements..."><%= booking.notes || '' %></textarea>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-3 justify-content-between align-items-center">
          <a href="/my-bookings?email=<%= booking.email %>&code=<%= booking.access_code %>" 
             class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
          </a>
          <button type="submit" class="btn btn-primary btn-save">
            <i class="bi bi-check-circle-fill"></i> Save & Resubmit for Approval
          </button>
        </div>

      </form>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  // Initialize Flatpickr
  flatpickr("#date", { 
    dateFormat: "Y-m-d", 
    minDate: "today",
    altInput: true,
    altFormat: "F j, Y"
  });
  
  flatpickr("#start_time", { 
    enableTime: true, 
    noCalendar: true, 
    dateFormat: "H:i", 
    time_24hr: false, 
    minuteIncrement: 15 
  });
  
  flatpickr("#finish_time", { 
    enableTime: true, 
    noCalendar: true, 
    dateFormat: "H:i", 
    time_24hr: false, 
    minuteIncrement: 15 
  });

  // Other Equipment Toggle
  const eqOtherCheck = document.getElementById("eqOtherCheck");
  const equipmentOther = document.getElementById("equipment_other");
  
  eqOtherCheck.addEventListener("change", () => { 
    equipmentOther.disabled = !eqOtherCheck.checked;
    if (!eqOtherCheck.checked) {
      equipmentOther.value = '';
    }
  });

  // Type of Use Other Toggle
  const typeOfUse = document.getElementById("type_of_use");
  const typeOfUseOther = document.getElementById("type_of_use_other");
  
  typeOfUse.addEventListener("change", () => {
    if (typeOfUse.value === "Other") {
      typeOfUseOther.focus();
    }
  });
</script>
</body>
</html>